using System.Collections.Generic;

public class BuildingPerimeterReport
{
    public double TotalPerimeter { get; set; }
    public List<string> WallNames { get; set; } = new List<string>();
    public List<double> WallLengths { get; set; } = new List<double>();
    
    public override string ToString()
    {
        return $"Общий периметр здания: {TotalPerimeter:F2} м.";
    }
}
